<Page
    x:Class="KanbanTasker.Views.BoardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:behaviors="using:KanbanTasker.Behaviors"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:KanbanTasker.Helpers"
    xmlns:local="using:KanbanTasker.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:syncfusion="using:Syncfusion.UI.Xaml.Kanban"
    xmlns:textconverters="using:KanbanTasker.Converters.Text"
    xmlns:viewmodels="using:KanbanTasker.ViewModels"
    x:Name="boardViewPage"
    d:DataContext="{d:DesignInstance Type=viewmodels:BoardViewModel}"
    mc:Ignorable="d">
    <Page.Resources>
        <ResourceDictionary>
            <Flyout x:Name="flyoutEditColumn" Placement="Bottom">
                <Grid Width="200">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Margin="0,0,0,8"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="Column Editor" />
                    <Border
                        Grid.Row="1"
                        Margin="0,0,0,12"
                        BorderBrush="LightGray"
                        BorderThickness="0,0,0,1" />
                    <StackPanel
                        Grid.Row="2"
                        Margin="0,0,4,8"
                        Orientation="Vertical">
                        <TextBlock FontSize="14" Text="Column Name:" />
                    </StackPanel>
                    <TextBox
                        x:Name="txtBoxColName"
                        Grid.Row="3"
                        Margin="0,0,0,8"
                        x:FieldModifier="public"
                        Loaded="txtBoxColName_Loaded"
                        MaxLength="24"
                        Text="{Binding Header}"
                        TextChanged="txtBoxColName_TextChanged" />
                    <muxc:NumberBox
                        x:Name="maxLimitNumberBox"
                        Grid.Row="4"
                        Header="Max Task Limit:"
                        LargeChange="25"
                        Maximum="100"
                        Minimum="0"
                        SmallChange="1"
                        SpinButtonPlacementMode="Inline"
                        ValueChanged="maxLimitNumberBox_ValueChanged"
                        Value="{Binding Maximum, Mode=TwoWay}" />
                    <Grid
                        Grid.Row="5"
                        Margin="0,12,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center">
                        <Button
                            x:Name="btnSaveColChanges"
                            x:FieldModifier="public"
                            Click="btnSaveColChanges_Click"
                            CommandParameter="{Binding Header}"
                            Content="Save Changes">
                            <!--<Interactivity:Interaction.Behaviors>
                                <behaviors:SaveColumnButtonClickBehavior Command="{x:Bind ViewModel.UpdateColumnCommand}" />
                            </Interactivity:Interaction.Behaviors>-->
                        </Button>
                    </Grid>
                </Grid>
            </Flyout>
            <RevealBackgroundBrush
                x:Key="CardBackgroundRevealBrush"
                FallbackColor="AliceBlue"
                Opacity="0.8"
                TargetTheme="Light"
                Color="AliceBlue" />
            <Rectangle
                x:Key="paneRect"
                Width="12"
                Margin="-12,0,0,0"
                HorizontalAlignment="Left"
                IsHitTestVisible="False"
                Opacity="0.1">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                        <GradientStop Offset="1" />
                        <GradientStop Offset="0" Color="Black" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <textconverters:StringToColorConverter x:Key="stringToColorConvertor" />
            <textconverters:CardCountConverter x:Key="cardCountConverter" />
            <textconverters:NullableDateTimeOffsetToBoolConverter x:Key="NullableDateTimeOffsetToBoolConverter" />
            <textconverters:StringToNullableDateTimeOffsetConverter x:Key="stringToDateConverter" />
            <textconverters:StringToTimeSpanConverter x:Key="stringToTimeSpanConverter" />
            <textconverters:IsNullConverter x:Key="isNullConverter" />
            <textconverters:BoolToBrushConverter x:Key="BoolToBrushConverter" />
            <syncfusion:CollapsedHeader x:Key="HeaderConverter" />
            <syncfusion:CollapsedHeaderMargin x:Key="CollapsedHeaderMarginConverter" />
            <ControlTemplate x:Key="CollapsedColumnTemplate" TargetType="helpers:CustomKanbanColumn">
                <Grid Margin="2,0,0,0" Background="{ThemeResource RegionBrush}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Line
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Opacity="0.7"
                        Stretch="Fill"
                        Stroke="{ThemeResource DefaultTextForegroundThemeBrush}"
                        StrokeDashOffset="1"
                        StrokeThickness="1.0"
                        X1="0"
                        X2="0"
                        Y1="0"
                        Y2="300" />
                    <Line
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Opacity="0.7"
                        Stretch="Fill"
                        Stroke="{ThemeResource DefaultTextForegroundThemeBrush}"
                        StrokeDashOffset="1"
                        StrokeThickness="1.0"
                        X1="0"
                        X2="0"
                        Y1="0"
                        Y2="300" />

                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                x:Name="Header"
                                Grid.Row="0"
                                Margin="0,5,0,5"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="Medium"
                                Foreground="GreenYellow"
                                Opacity="0"
                                Text="{TemplateBinding Title}"
                                TextWrapping="NoWrap" />

                            <Border
                                x:Name="ExpandIcon"
                                Grid.Row="1"
                                Margin="0,8,0,0"
                                Background="Transparent">
                                <Path
                                    Width="7"
                                    Height="14"
                                    HorizontalAlignment="Center"
                                    Data="M129.843,187.893 L141.871,195.519 L130.236,203.308"
                                    IsHitTestVisible="False"
                                    Stretch="Fill"
                                    Stroke="{ThemeResource DefaultTextForegroundThemeBrush}"
                                    StrokeLineJoin="Miter"
                                    StrokeThickness="1.5"
                                    UseLayoutRounding="False" />
                            </Border>

                            <TextBlock
                                Grid.Row="2"
                                Margin="0,45,0,10"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontSize="13"
                                FontWeight="Normal"
                                Foreground="{ThemeResource DefaultTextForegroundThemeBrush}"
                                Text="{Binding Cards.Count, Converter={StaticResource HeaderConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                <TextBlock.RenderTransform>
                                    <RotateTransform Angle="270" CenterX="0.5" CenterY="0.5" />
                                </TextBlock.RenderTransform>
                            </TextBlock>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Canvas HorizontalAlignment="Center">
                                <!--  NOTE: Text needs to be set before Margin, otherwise it doesn't render correctly  -->
                                <TextBlock
                                    Margin="{Binding Converter={StaticResource CollapsedHeaderMarginConverter}, RelativeSource={RelativeSource Mode=Self}}"
                                    HorizontalAlignment="Center"
                                    FontSize="16"
                                    FontWeight="Medium"
                                    Foreground="{ThemeResource DefaultTextForegroundThemeBrush}"
                                    Text="{TemplateBinding Title}">
                                    <TextBlock.RenderTransform>
                                        <RotateTransform Angle="270" CenterX="0.5" CenterY="0.5" />
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Canvas>
                        </Grid>
                    </Grid>
                </Grid>
            </ControlTemplate>
            <DataTemplate x:Key="TagsTemplate">
                <Border Background="#FFEDEDED" CornerRadius="2">
                    <TextBlock
                        Margin="10,1,10,1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="10"
                        Foreground="#FF454545"
                        Text="{Binding}"
                        TextTrimming="CharacterEllipsis" />
                </Border>
            </DataTemplate>
            <!--  FOR OLD BACKGROUND, KEEP: {Binding Tag.CardStyle.Background, RelativeSource={RelativeSource Mode=TemplatedParent}}  -->
            <DataTemplate x:Key="KanbanCardTemplate">
                <StackPanel
                    x:Name="cardStackPanel"
                    Orientation="Vertical"
                    RightTapped="Card_RightTapped">
                    <Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="PointerEntered">
                            <Core:ChangePropertyAction
                                PropertyName="Visibility"
                                TargetObject="{Binding ElementName=BtnEdit}"
                                Value="Visible" />
                            <Core:ChangePropertyAction
                                PropertyName="Visibility"
                                TargetObject="{Binding ElementName=BtnDelete}"
                                Value="Visible" />
                        </Core:EventTriggerBehavior>
                        <Core:EventTriggerBehavior EventName="PointerExited">
                            <Core:ChangePropertyAction
                                PropertyName="Visibility"
                                TargetObject="{Binding ElementName=BtnEdit}"
                                Value="Collapsed" />
                            <Core:ChangePropertyAction
                                PropertyName="Visibility"
                                TargetObject="{Binding ElementName=BtnDelete}"
                                Value="Collapsed" />
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>
                    <Border
                        Height="Auto"
                        MinHeight="100"
                        Margin="0,6,0,6"
                        Background="{ThemeResource CardBackgroundRevealBrush}"
                        BorderBrush="{Binding ColorKey, Converter={StaticResource stringToColorConvertor}}"
                        BorderThickness="5,0,0,0"
                        CornerRadius="{Binding Tag.CardStyle.CornerRadius, RelativeSource={RelativeSource Mode=TemplatedParent}}">

                        <Grid>
                            <Grid Margin="8,5,2,2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*" />
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="3*" />
                                    <RowDefinition Height="3*" />
                                </Grid.RowDefinitions>

                                <!--  Card Title & Buttons Row  -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        x:Name="KANBAN_Title"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Height="Auto"
                                        HorizontalAlignment="{Binding Tag.CardStyle.TitleHorizontalAlignment, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        VerticalAlignment="Center"
                                        FontSize="{Binding Tag.CardStyle.TitleFontSize, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        FontWeight="Bold"
                                        Foreground="{Binding Tag.CardStyle.TitleColor, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap"
                                        ToolTipService.ToolTip="{Binding Title}" />

                                    <!--  Card Buttons  -->
                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Orientation="Horizontal">
                                        <HyperlinkButton
                                            x:Name="BtnEdit"
                                            Margin="4,0,4,0"
                                            Click="CardBtnEdit_Click"
                                            Command="{Binding ElementName=boardViewPage, Path=ViewModel.EditTaskCommand}"
                                            CommandParameter="{Binding ID}"
                                            Style="{ThemeResource CardHyperlinkButtonStyle}"
                                            Visibility="Collapsed">
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="16"
                                                Glyph="&#xE104;" />
                                        </HyperlinkButton>
                                        <HyperlinkButton
                                            x:Name="BtnDelete"
                                            Margin="4,0,4,0"
                                            Click="CardBtnDelete_Click"
                                            Style="{ThemeResource CardHyperlinkButtonStyle}"
                                            Visibility="Collapsed">
                                            <FlyoutBase.AttachedFlyout>
                                                <Flyout
                                                    x:Name="flyoutDeleteCard"
                                                    PickerFlyoutBase.Title="Delete Confirmation"
                                                    Placement="Right">
                                                    <StackPanel Orientation="Vertical">
                                                        <TextBlock
                                                            FontSize="16"
                                                            FontWeight="Bold"
                                                            Text="Delete Confirmation"
                                                            TextAlignment="Left" />
                                                        <TextBlock
                                                            Margin="0,4,0,0"
                                                            Text="Are you sure you wish to delete this task?"
                                                            TextAlignment="Left" />
                                                        <StackPanel Orientation="Horizontal">
                                                            <Button
                                                                x:Name="flyoutBtnDeleteCardYes"
                                                                Margin="0,8,8,0"
                                                                Click="FlyoutDeleteCardBtnYes_Click"
                                                                Command="{Binding ElementName=boardViewPage, Path=ViewModel.DeleteTaskCommand}"
                                                                CommandParameter="{Binding ID}"
                                                                Content="Yes, delete this task"
                                                                CornerRadius="3" />
                                                        </StackPanel>
                                                    </StackPanel>
                                                </Flyout>
                                            </FlyoutBase.AttachedFlyout>
                                            <FontIcon
                                                FontFamily="Segoe MDL2 Assets"
                                                FontSize="16"
                                                Glyph="&#xE74D;" />
                                        </HyperlinkButton>
                                    </StackPanel>
                                </Grid>

                                <!--  Card Description Row  -->
                                <Grid Grid.Row="1">
                                    <!--<TextBlock
                                        x:Name="KANBAN_Description"
                                        Height="Auto"
                                        Margin="0,8,0,8"
                                        VerticalAlignment="Center"
                                        FontSize="{Binding Tag.CardStyle.FontSize, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        Foreground="{Binding Tag.CardStyle.Foreground, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        MaxLines="4"
                                        Text="{Binding Description}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="Wrap" />-->
                                    <RichTextBlock
                                        x:Name="KANBAN_DescriptionBlock"
                                        Margin="0,8,0,8"
                                        VerticalAlignment="Center"
                                        FontSize="{Binding Tag.CardStyle.FontSize, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        Foreground="{Binding Tag.CardStyle.Foreground, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        MaxLines="10"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="Wrap">
                                        <Paragraph>
                                            <Run Text="{Binding Description}" />
                                        </Paragraph>
                                    </RichTextBlock>
                                </Grid>

                                <!--  Card Tags & Indicator Row  -->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--  Card Tags - Custom way  -->
                                    <ListView
                                        Grid.Column="0"
                                        Margin="0,4,0,4"
                                        VerticalAlignment="Bottom"
                                        IsItemClickEnabled="True"
                                        ItemsSource="{Binding Tags}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <controls:WrapPanel
                                                    Padding="0,0,0,0"
                                                    Orientation="Horizontal"
                                                    VerticalSpacing="0" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Padding" Value="0" />
                                                <Setter Property="Margin" Value="0" />
                                                <Setter Property="MinHeight" Value="0" />
                                                <Setter Property="MinWidth" Value="0" />
                                                <Setter Property="BorderThickness" Value="0" />
                                                <Setter Property="Height" Value="Auto" />
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="ListViewItem">
                                                            <ListViewItemPresenter
                                                                Margin="1,1,4,4"
                                                                Padding="0"
                                                                BorderThickness="0"
                                                                ContentMargin="0" />
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ListView.ItemContainerStyle>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FFEDEDED" CornerRadius="4">
                                                    <TextBlock
                                                        Grid.Column="0"
                                                        MaxWidth="226"
                                                        Margin="10,2,10,2"
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Center"
                                                        FontSize="12"
                                                        Foreground="#FF454545"
                                                        Text="{Binding}"
                                                        TextTrimming="None"
                                                        TextWrapping="Wrap" />
                                                </Border>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>

                                    <!--<Border
                                        Grid.Column="1"
                                        Width="30"
                                        Height="30"
                                        Margin="0,0,-3,-3"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        BorderThickness="0"
                                        CornerRadius="0,0,6,0"
                                        DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                        Visibility="{Binding Tag.CardStyle.IndicatorVisibility, RelativeSource={RelativeSource Mode=TemplatedParent}}">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Offset="0.5" Color="Transparent" />
                                                <GradientStop Offset="0.5" Color="{Binding Tag.IndicatorColor}" />
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>-->
                                </Grid>

                                <!--  Date Information Section on Kanban Card  -->
                                <!--  Set this section to be visible only if the respective card has a selected due date  -->
                                <!--<Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                -->
                                <!--<TextBlock
                                        Text="&#xE121;"
                                        FontFamily="SegoeMDL2Assets"
                                        FontWeight="Bold"
                                        FontSize="{Binding Tag.CardStyle.FontSize,
                                        RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        Grid.Column="0"
                                        Margin="0 0 12 0"/>-->
                                <!--
                                    <Border Grid.Row="0" BorderThickness="0.25" Grid.ColumnSpan="3" BorderBrush="Gray" Margin="0 0 0 4"  HorizontalAlignment="Stretch" />
                                    <Border CornerRadius="4" Grid.Row="1"  Grid.Column="0" Background="Transparent">
                                        <StackPanel Orientation="Horizontal" Margin="3">
                                            <SymbolIcon Symbol="Clock" Grid.Column="0" VerticalAlignment="Center" Foreground="Red" />
                                            <TextBlock
                                                Text="Due: "
                                                Margin="4 0 4 0"
                                                Foreground="Red"
                                                FontWeight="Bold"
                                                VerticalAlignment="Center"
                                                FontSize="{Binding Tag.CardStyle.FontSize, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>

                                            <TextBlock
                                                x:Name="KANBAN_DueDate"
                                                Height="Auto"
                                                Margin="2"
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                FontSize="{Binding Tag.CardStyle.FontSize, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                Foreground="Red"
                                                Text="{Binding DueDate}"
                                                TextWrapping="Wrap" />
                                            <Border VerticalAlignment="Stretch" BorderThickness="0.25" BorderBrush="Gray"  Margin="8 0 8 0" />
                                            <TextBlock
                                                x:Name="KANBAN_DaysRemaining"
                                                Height="Auto"
                                                Margin="2"
                                                Grid.Column="1"
                                                VerticalAlignment="Center"
                                                FontSize="{Binding Tag.CardStyle.FontSize, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                Foreground="Black"
                                                Text="0 day(s) remaining"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                    </Border>

                                -->
                                <!--<TextBlock
                                        FontSize="{Binding Tag.CardStyle.FontSize, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                        Grid.Column="2"
                                        HorizontalAlignment="Right"
                                        Margin="0 0 12 0">
                                        <Run FontWeight="Bold" Text="Age:" />
                                        <Run Text="4d" />
                                    </TextBlock>-->
                                <!--
                                </Grid>-->
                            </Grid>
                        </Grid>
                    </Border>
                </StackPanel>
            </DataTemplate>
            <CommandBarFlyout x:Name="taskFlyout" Placement="Right">
                <AppBarButton
                    x:Name="flyoutBtnEdit"
                    Margin="0"
                    Padding="0"
                    AllowFocusOnInteraction="True"
                    Click="TappedFlyoutBtnEdit_Click"
                    Command="{x:Bind ViewModel.EditTaskCommand}"
                    CommandParameter="{x:Bind ViewModel.CurrentTask.ID, Mode=OneWay}"
                    Icon="Edit"
                    Label="Edit Task"
                    Style="{ThemeResource AppBarButtonCustomStyle}"
                    ToolTipService.ToolTip="Edit" />
                <AppBarButton
                    x:Name="flyoutBtnDelete"
                    Margin="0"
                    Padding="0"
                    AllowFocusOnInteraction="True"
                    Icon="Delete"
                    Label="Delete"
                    Style="{ThemeResource AppBarButtonCustomStyle}"
                    ToolTipService.ToolTip="Delete">
                    <AppBarButton.Flyout>
                        <Flyout
                            x:Name="tappedFlyoutDeleteCard"
                            PickerFlyoutBase.Title="Delete Confirmation"
                            Placement="Bottom">
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="Delete Confirmation"
                                    TextAlignment="Left" />
                                <TextBlock
                                    Margin="0,4,0,0"
                                    Text="Are you sure you wish to delete this task?"
                                    TextAlignment="Left" />
                                <StackPanel Orientation="Horizontal">
                                    <Button
                                        x:Name="tappedFlyoutBtnDeleteCardYes"
                                        Margin="0,8,8,0"
                                        Click="tappedFlyoutBtnDeleteCardYes_Click"
                                        Content="Yes, delete this task"
                                        CornerRadius="3" />
                                </StackPanel>
                            </StackPanel>
                        </Flyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBarFlyout>
        </ResourceDictionary>
    </Page.Resources>
    <SplitView
        x:Name="splitView"
        DisplayMode="Inline"
        IsPaneOpen="{x:Bind ViewModel.IsPaneOpen, Mode=OneWay}"
        PaneBackground="{ThemeResource PaneBackgroundAcrylicBrush}"
        PanePlacement="Right">

        <SplitView.Pane>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition Height="90" />
                </Grid.RowDefinitions>

                <!--  Pane Header  -->
                <Grid x:Name="paneHeaderGrid" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        Margin="20"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="{x:Bind ViewModel.PaneTitle, Mode=OneWay}" />
                    <AppBarButton
                        x:Name="appBarBtnClosePane"
                        Grid.Column="2"
                        Margin="5,5,20,5"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding ElementName=boardViewPage, Path=ViewModel.CancelEditCommand}"
                        CornerRadius="4"
                        Icon="OpenPane"
                        Label="Close Pane" />
                </Grid>
                <!--  Border Separator  -->
                <Border
                    x:Name="paneHeaderSeparator"
                    Width="280"
                    BorderBrush="Gray"
                    BorderThickness="0,0,0,1" />

                <!--  Pane Body  -->
                <ScrollViewer x:Name="paneBody" Grid.Row="1">
                    <StackPanel Margin="20,0,20,20">
                        <TextBox
                            x:Name="txtBoxID"
                            CornerRadius="4"
                            Header="ID:"
                            IsEnabled="False"
                            Text="{x:Bind ViewModel.CurrentTask.ID, Mode=OneWay}"
                            Visibility="Collapsed" />
                        <TextBlock
                            Margin="0,20,0,8"
                            FontSize="15"
                            FontWeight="Bold"
                            Foreground="{ThemeResource DefaultTextForegroundThemeBrush}"
                            Text="Title" />
                        <TextBox
                            x:Name="txtBoxTitle"
                            CornerRadius="4"
                            PlaceholderText="Type your information here"
                            Style="{StaticResource TextBoxStyle1}"
                            Text="{x:Bind ViewModel.CurrentTask.Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <StackPanel Margin="0,15,0,2" Orientation="Horizontal">
                            <SymbolIcon Symbol="Page2" />
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                Text="Notes:" />
                        </StackPanel>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox
                                x:Name="txtBoxDescription"
                                Height="200"
                                MaxHeight="300"
                                AcceptsReturn="True"
                                Background="{ThemeResource RegionBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                PlaceholderText="Type your information here"
                                Text="{x:Bind ViewModel.CurrentTask.Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap" />
                        </ScrollViewer>
                        <Grid Margin="0,10,0,0" VerticalAlignment="Center">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <SymbolIcon Symbol="List" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="8,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="Category: " />
                            <TextBlock
                                Grid.Column="2"
                                Margin="8,2,0,2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontWeight="Bold"
